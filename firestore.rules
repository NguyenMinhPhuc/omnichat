rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if request.auth.uid != null;
      allow delete: if isAdmin();
    }
    
    match /chats/{chatId} {
      // Users can create new chats for themselves
      allow create: if request.auth.uid != null && request.resource.data.chatbotId == request.auth.uid;
      
      // Users can only read/update their own chat histories
      allow read, update: if request.auth.uid != null && resource.data.chatbotId == request.auth.uid;
      
      // Admins can read all chat histories for support/monitoring
      allow read: if isAdmin();
    }

    match /monthlyUsage/{usageId} {
        // The document ID is composite: {userId}_{monthYear}
        // Allow create if the userId in the doc ID matches the user's own UID
        allow create: if request.auth.uid != null && request.auth.uid == split(usageId, '_')[0];
        
        // Allow user to read/update their own usage doc.
        // Allow admin to read anyone's usage doc.
        allow read, update: if (request.auth.uid != null && request.auth.uid == resource.data.userId) || isAdmin();
    }
  }
}