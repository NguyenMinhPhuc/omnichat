
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow anyone to read a specific user's public profile data (for chatbot customization)
      allow get: if true;

      // Only allow admins to list all users (for the admin panel)
      // Note: This requires client-side code to handle potential permission errors gracefully if a non-admin tries to list.
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Allow users to create their own user document during signup
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow users to update their own data
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Only allow admins to delete users from Firestore
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Rules for the 'vector_store' subcollection
      match /vector_store/{docId} {
        // Only the owner can read or write to their own vector store
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
        // Allow anyone to create a new chat session
        allow create: if true;
        
        // Allow anyone to add messages to a chat they are part of.
        // For simplicity, we allow any write, but in production you might want to lock this down further.
        allow update: if true;

        // Only the chatbot owner (user) can read the chat history.
        allow read: if request.auth != null && request.auth.uid == resource.data.chatbotId;
        
        // No one can delete chats from the client.
        allow delete: if false;
    }
  }
}
