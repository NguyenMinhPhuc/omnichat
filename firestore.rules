rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Checks if the user making the request is an administrator.
    function isUserAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow users to read and write to their own document
      allow read, write: if request.auth.uid == userId;
      
      // Allow admins to get and list any user document
      allow get, list: if isUserAdmin(request.auth.uid);

      // Rules for the 'monthlyUsage' subcollection
      match /monthlyUsage/{usageId} {
        // Allow users to read their own usage data
        allow read: if request.auth.uid == userId;
        // Allow admins to read anyone's usage data
        allow read: if isUserAdmin(request.auth.uid);
      }
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // Allow users to read chat sessions that belong to them
      allow read: if request.auth.uid == resource.data.chatbotId;
      // Allow admins to read any chat session
      allow read: if isUserAdmin(request.auth.uid);
    }
  }
}
