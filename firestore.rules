rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow ANYONE to read user data (for public chatbot settings)
    // but only the authenticated user can write to their own document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Allow logged-in users to create/update leads.
    // Reading/deleting leads is restricted to the chatbot owner or an admin.
    match /leads/{leadId} {
       allow create, update: if request.auth != null;
       allow read, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' 
                          || get(/databases/$(database)/documents/leads/$(leadId)).data.chatbotId == request.auth.uid;
    }

    // Allow anyone to create chat sessions.
    // Reading/updating/deleting is restricted to the chatbot owner or an admin.
     match /chats/{chatId} {
        allow create: if true; 
        allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' 
                                    || get(/databases/$(database)/documents/chats/$(chatId)).data.chatbotId == request.auth.uid;
    }
  }
}
