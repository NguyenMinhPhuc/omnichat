rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an admin
    function isAdmin() {
      // Check if the user is authenticated and if their user document shows they have the 'admin' role.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read the entire collection.
      // Individual users can only read their own document.
      allow list: if isAdmin();
      allow get: if request.auth.uid == userId || isAdmin();

      // Users can create their own document on signup.
      allow create: if request.auth.uid == userId;

      // Users can only update their own document.
      // Admins can update any user document.
      allow update: if request.auth.uid == userId || isAdmin();
      
      // Only admins can delete user documents.
      allow delete: if isAdmin();
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // Users can create their own chat sessions.
      // The client must prove it is creating a chat for the correct chatbotId (which is the user's UID).
      allow create: if request.auth != null && request.resource.data.chatbotId == request.auth.uid;

      // Users can read and update their own chat sessions.
      // Admins can view any chat session for moderation/history.
      allow read, update: if get(/databases/$(database)/documents/chats/$(chatId)).data.chatbotId == request.auth.uid || isAdmin();
    }
  }
}
