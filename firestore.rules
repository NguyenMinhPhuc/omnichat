
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to read user profiles for chatbot config
    // Allow authenticated users to update their own profile
    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to create and manage their own chat sessions
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow anyone to create leads
    // Allow authenticated users (chatbot owners) to update the lead status
    match /leads/{leadId} {
      allow create: if true;
      allow update: if request.auth != null;
    }

  }
}

    