rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      // Checks if the requesting user's document has the 'role' field set to 'admin'
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow users to read their own document, and allow admins to read any user document.
      allow read: if request.auth.uid == userId || isAdmin();
      // Allow users to write only to their own document.
      allow write: if request.auth.uid == userId;

      // Rules for the 'monthlyUsage' subcollection
      match /monthlyUsage/{usageId} {
        // Allow users to read their own usage data
        // Allow admins to read anyone's usage data
        allow read: if request.auth.uid == userId || isAdmin();
      }
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // Allow users to read chat sessions that belong to them
      // Allow admins to read any chat session
      allow read: if request.auth.uid == resource.data.chatbotId || isAdmin();
    }
  }
}
