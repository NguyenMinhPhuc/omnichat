rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read of user profiles for chatbot configuration, but only owner can write.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to create and update their own chat sessions.
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.chatbotId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.chatbotId;
    }
    
    // Allow anyone to create a new lead document. This is necessary for the lead capture flow.
    match /leads/{leadId} {
      allow create: if true;
      allow read, write: if request.auth != null; // Admins can read/manage later
    }

    // Secure the monthlyUsage collection so only admins can access it (future-proofing)
    // For now, access is handled by Admin SDK, which bypasses these rules.
    match /monthlyUsage/{usageId} {
       allow read, write: if false; // To be defined with admin roles later
    }
  }
}