
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow public read of customization and knowledge base for the chatbot
      allow read: if true;
      // Allow user to create and update their own document
      allow write: if request.auth.uid == userId;
    }

    match /chats/{chatId} {
      // User can only read their own chat history
      allow read: if request.auth.uid == resource.data.chatbotId;
      // Anyone can create a new chat session (for embedded chatbot)
      allow create: if true;
      // Allow anyone to add messages to the chat history
      allow update: if true;
      // Only the chatbot owner can delete the history
      allow delete: if request.auth.uid == resource.data.chatbotId;
    }
  }
}
