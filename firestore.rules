rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user's document in Firestore has the role 'admin'
    // This is a secure way to check roles from the rules themselves.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read and write to their own document.
      // An admin can read and write to any user's document.
      allow read, write: if request.auth.uid == userId || isAdmin();

      // Rules for the 'monthlyUsage' subcollection
      match /monthlyUsage/{usageId} {
        // A user can read their own usage data.
        // An admin can read any user's usage data.
        allow read: if request.auth.uid == userId || isAdmin();
      }
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // The server-side action creates new chats, so anonymous users don't need 'create' permission.
      // Logged-in users (the chatbot owners) can read the chats associated with their chatbotId (which is their UID).
      // Admins can read any chat session for moderation or review.
      allow read: if request.auth.uid == resource.data.chatbotId || isAdmin();

      // No one can write directly to the chats collection from the client-side except for updates from the server.
      // We allow server-side actions to update the message history.
      allow write: if false; // Secure by default. All writes must come from the backend.
    }
  }
}
