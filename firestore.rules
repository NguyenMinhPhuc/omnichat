rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own user document.
    // However, we need to allow any authenticated user to read any user's
    // document to fetch chatbot configuration for the live version.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Chat sessions can be created by anyone (for the public chatbot)
    // and read by anyone. Updates are also open as the session is managed
    // by the client.
    match /chats/{chatId} {
      allow read, create, update: if true;
    }
  }
}
