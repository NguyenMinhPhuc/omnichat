
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    match /users/{userId} {
      // Allow users to read and update their own document
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Allow admins to read, create, update, and delete any user document
      allow read, write, delete: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    match /chats/{chatId} {
      // Allow anyone to create a new chat session
      allow create: if true;
      // Allow anyone to read and update chat sessions (for the live chatbot)
      // In a production app, you might want to restrict this further
      allow read, update: if true;
    }
  }
}
