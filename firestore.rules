rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write their own document.
    // Admins can read and update any user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Chat sessions can be read by the chatbot owner.
    // Anyone can create a chat session.
    match /chats/{chatId} {
      allow read: if get(/databases/$(database)/documents/users/$(resource.data.chatbotId)).id == request.auth.uid;
      allow create: if request.auth != null;
      allow update: if request.auth != null; // Allow updating messages array
    }

    // Leads can be read and updated by the chatbot owner.
    // Anyone can create a lead.
    match /leads/{leadId} {
       allow read, update: if get(/databases/$(database)/documents/users/$(resource.data.chatbotId)).id == request.auth.uid;
       allow create: if request.auth != null;
    }
    
    // Monthly usage data can only be read by admins.
    match /monthlyUsage/{usageId} {
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow write: if false; // Should be written by a backend process/function only
    }
  }
}
